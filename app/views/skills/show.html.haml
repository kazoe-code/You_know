%dl
  %dt
    登録している名前
    %dd
      = current_user.name


%h5 アカウントの編集
.account-page__inner--right.user-form
= form_for(current_user) do |f|
  .field
    .field-label
      = f.label :name
    .field-input
      = f.text_field :name, autofocus: true
  .field
    .field-label
      = f.label :email
    .field-input
      = f.email_field :email
  .actions
    = f.submit "Update", class: 'btn'